<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.ashish.ujanlearning" >
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_ujan"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- A child of the main activity -->
        <activity
            android:name="com.app.ashish.ujanlearning.EnglishLetterActivity"
            android:parentActivityName="com.app.ashish.ujanlearning.MainActivity"
            android:label="@string/app_name">
        </activity>

        <!-- This Settings Activity is another child of main activity -->
        <activity
            android:name="com.app.ashish.settings.SettingActivity"
            android:parentActivityName="com.app.ashish.ujanlearning.MainActivity"
            android:label="@string/user_settings">
        </activity>
    </application>
</manifest>
